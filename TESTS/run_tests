#!/bin/bash

here=`pwd`
DIR_SRC=$here/..
echo $here
echo $DIR_SRC

PCEXE=$DIR_SRC/PhysicalConstants_Main.x


if (! test -f $PCEXE) then
  cd $DIR_SRC
    make FC=gfortran OPT=0 INT=4 LAPACK=0 PhysicalConstants_Main.x &> $here/comp.log
  cd $here
  compOK=`grep -c 'OK' comp.log `
  if [ $compOK = '1' ] 
  then
     echo " PhysicalConstants_Main.x compilation: OK"
  else
     echo " PhysicalConstants_Main.x compilation: ERROR"
     exit 1
  fi
fi

OldTestsDir=output_28nov2018

./clean

for dat_name in dat*
do
   res_name=`echo res_$dat_name | sed 's/dat_//'`
   echo $res_name
   $PCEXE < $dat_name > $here/$res_name
done

for res_name in res*
do
   echo ---------------------------------------
   echo ----------- $res_name

   ./CompareMass  $res_name
   ./CompareConst $res_name

   echo ---------------------------------------
done

